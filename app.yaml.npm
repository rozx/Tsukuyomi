name: luna-ai-translator
region: nyc

# 静态站点配置（使用 npm 作为备选方案）
# 如果 Bun 安装有问题，可以使用此配置
static_sites:
  - name: web
    github:
      repo: rozx/luna-ai-translator
      branch: main
      deploy_on_push: true
    source_dir: /
    build_command: npm install && npm run build:spa
    output_dir: dist/spa
    envs:
      - key: NODE_ENV
        value: production
        scope: BUILD_TIME
    routes:
      - path: /
    catchall_document: index.html

