{
  "name": "luna-ai-translator",
  "version": "0.5.0",
  "description": "Luna AI translator",
  "productName": "Luna AI translator",
  "author": "rozx <rozx@heavyskymobile.com>",
  "type": "module",
  "private": true,
  "scripts": {
    "lint": "bunx vue-tsc --noEmit",
    "format": "prettier --write \"**/*.{js,ts,vue,scss,html,md,json}\" --ignore-path .gitignore",
    "test": "bun test",
    "sync-version": "bun scripts/sync-version.ts",
    "dev": "bun run sync-version && quasar dev",
    "build": "bun run sync-version && quasar build",
    "build:spa": "bun run sync-version && quasar build -m spa",
    "postinstall": "quasar prepare"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@octokit/rest": "^22.0.1",
    "@patdx/kuromoji": "^1.0.4",
    "@primevue/themes": "^4",
    "@quasar/extras": "^1.16.4",
    "axios": "^1.2.1",
    "cheerio": "^1.1.2",
    "dompurify": "^3.3.0",
    "idb": "^8.0.3",
    "lodash": "^4.17.21",
    "marked": "^17.0.1",
    "novel-downloader": "^2.0.40",
    "openai": "^6.9.0",
    "pinia": "^3.0.1",
    "primeicons": "^7",
    "primevue": "^4",
    "quasar": "^2.16.0",
    "uuid": "^13.0.0",
    "vue": "^3.5.22",
    "vue-i18n": "^11.0.0",
    "vue-router": "^4.0.12",
    "words-count": "^2.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@intlify/unplugin-vue-i18n": "^4.0.0",
